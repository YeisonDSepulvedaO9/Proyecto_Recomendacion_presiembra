<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".activity_menu_principal"
    android:background="@drawable/fondo_appi">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido al menú principal"
            android:textAlignment="center"
            android:textColor="#6c6f00"
            android:textSize="34sp"
            android:textStyle="normal|bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ImButton_perfil"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/farmer_iconn" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/IBoton_recomendador"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:backgroundTint="#C4C8841F"
                app:srcCompat="@drawable/reco_new" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/percent"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="Perfil"
                android:textAlignment="center"
                android:textColor="#6c6f00"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Recomendación"
                android:textAlignment="center"
                android:textColor="#6c6f00"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ImButton_historiala"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:backgroundTint="#C4C8841F"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/plantando" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/Butt_log_out"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:backgroundTint="#C4C8841F"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/log_out_final" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Historial"
                android:textAlignment="center"
                android:textColor="#6c6f00"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Salir"
                android:textAlignment="center"
                android:textColor="#6c6f00"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>