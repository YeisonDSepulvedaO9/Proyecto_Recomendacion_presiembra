<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_appi"
    tools:context=".menu_cultivos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/IB_arveja_c"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="#4CAF50"
            android:radius="50dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/arveja" />

        <ImageButton
            android:id="@+id/IB_fresa_c"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#e55854"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/fresa" />

        <ImageButton
            android:id="@+id/IB_papa_c"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="#534A2C"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/potato" />

        <Button
            android:id="@+id/btvolver_reporte"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="-2dp"
            android:layout_marginBottom="50dp"
            android:drawableLeft="?attr/homeAsUpIndicator"
            android:text="menÃº principal"
            android:textSize="20sp"
            app:cornerRadius="18dp"
            app:iconPadding="2dp" />
    </LinearLayout>

</RelativeLayout>